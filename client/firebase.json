{
    "hosting": [
        {
            "target": "alt",
            "public": "build",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ]
        },
        {
            "target": "default",
            "public": "build",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ]
        }
    ]
}
